<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="new-user-heading">Please sign in</h2>

    <label for="email_input" class="sr-only">Email address</label>
    <%= f.email_field :email, id: 'email_input', class: 'form-control',
        placeholder: 'Email address', autofocus: true, required: true %>

    <label for="password_input" class="sr-only">Password</label>
    <%= f.password_field :password, id: 'password_input', class: 'form-control',
        placeholder: 'Password', autocomplete: 'off', required: true %>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %>
          Remember me
        </label>
      </div>
    <% end -%>

    <%= f.submit "Sign in", class: 'btn btn-lg btn-primary btn-block' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
