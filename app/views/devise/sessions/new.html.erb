<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <h3 class="new-user-heading"><%= t('sign_in.prompt') %></h3>

    <label for="email_input" class="sr-only"><%= t('sign_in.form.email') %></label>
    <%= f.email_field :email, id: 'email_input', class: 'form-control',
        placeholder: t('sign_in.form.email'), autofocus: true, required: true %>

    <label for="password_input" class="sr-only"><%= t('sign_in.form.password') %></label>
    <%= f.password_field :password, id: 'password_input', class: 'form-control',
        placeholder: t('sign_in.form.password'), autocomplete: 'off', required: true %>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %>
          <%= t('sign_in.form.remember_me') %>
        </label>
      </div>
    <% end -%>

    <%= f.submit t('sign_in.form.sign_in'), class: 'btn btn-lg btn-primary btn-block' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
