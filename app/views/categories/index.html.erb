<div class="row dashboard-table-header">
  <div class="col-md-8">
    <h2><%= t 'categories' %></h2>
  </div>

  <div class="col-md-4">
    <ul class="pull-right">
      <li>
        <%= link_to t('actions.create'), new_category_path,
            class: 'btn btn-success btn-new' %>
      </li>
      <li>
        <%= link_to t('actions.edit'), '#', class: 'btn btn-primary btn-edit',
            disabled: 'disabled' %>
      </li>
      <li>
        <%= link_to t('actions.delete'), '#', class: 'btn btn-danger btn-delete',
            method: :delete, disabled: 'disabled',
            data: { confirm: t('category.confirm.actions.destroy') } %>
      </li>
    <ul>
  </div>
</div>

<table class="table table-hover dashboard-table">
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class="hidden id"><%= category.id %></td>
        <td><%= category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
