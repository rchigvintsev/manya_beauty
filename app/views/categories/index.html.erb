<div class="row table-header">
  <div class="col-md-8">
    <h2><%= t 'categories' %></h2>
  </div>

  <div class="col-md-4">
    <ul class="pull-right">
      <li>
        <%= link_to t('actions.create'), new_category_path,
            class: 'btn btn-success btn-new' %>
      </li>
      <li>
        <a href="#" class="btn btn-primary btn-edit" disabled="disabled">
          <%= t 'actions.edit' %>
        </a>
      </li>
      <li>
        <a href="#" class="btn btn-danger btn-delete" disabled="disabled">
          <%= t 'actions.delete' %>
        </a>
      </li>
    <ul>
  </div>
</div>

<table class="table table-hover categories">
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class="hidden id"><%= category.id %></td>
        <td><%= category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
