<div class="row dashboard-table-header">
  <div class="col-md-8">
    <h2><%= t 'models' %></h2>
  </div>

  <div class="col-md-4">
    <ul class="pull-right">
      <li>
        <%= link_to t('actions.create'), new_model_path(page: params[:page]),
                    class: 'btn btn-success btn-new' %>
      </li>
      <li>
        <%= link_to t('actions.edit'), '#', class: 'btn btn-primary btn-edit',
                    disabled: 'disabled' %>
      </li>
      <li>
        <%= link_to t('actions.delete'), '#', class: 'btn btn-danger btn-delete',
                    method: :delete, disabled: 'disabled',
                    data: {confirm: t('model.confirm.actions.destroy')} %>
      </li>
    </ul>
  </div>
</div>

<table class="table table-hover dashboard-table models">
  <thead>
  <tr>
    <th><%= t 'activerecord.attributes.model.id' %></th>
    <th><%= t 'activerecord.attributes.model.name' %></th>
    <th><%= t 'activerecord.attributes.model.photo_album' %></th>
  </tr>
  </thead>
  <tbody>
  <% @models.each do |model| %>
      <tr>
        <td class="id"><%= model.id %></td>
        <td><%= model.name %></td>
        <td><%= model.photo_album.name %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate class: 'pagination pull-right' %>
