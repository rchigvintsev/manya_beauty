<div class="row no-margins">
  <div class="col-md-12 no-padding">
    <div class="carousel-container">
      <div class="overlay"></div>

      <div class="hero">
        <h1><%= t 'author_name' %></h1>
        <%= image_tag 'tailor-logo.png', width: 192, height: 192 %>
        <h2><%= t 'specialization' %></h2>
      </div>

      <div id="owl_carousel" class="owl-carousel owl-theme">
        <div class="item"><div class="slide slide1"></div></div>
        <div class="item"><div class="slide slide2"></div></div>
        <div class="item"><div class="slide slide3"></div></div>
      </div>
    </div>
  </div>
</div>

<div class="row row-lg-heading no-margins">
  <div class="col-md-12">
    <h3 class="no-margins"><%= t 'about.header' %></h3>
  </div>
</div>

<div class="row row-lg-content about-me no-margins">
  <div class="col-md-3">
    <div class="avatar-container">
      <%= image_tag 'avatar.png' %>
    </div>
  </div>

  <div class="col-md-9">
    <div class="about-container">
      <div class="row no-margins">
        <div class="col-md-12">
          <h4><%= t 'about.greeting' %></h4>
        </div>
      </div>

      <div class="row no-margins">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <p id="about_content" class="text-justify">
            <%= t 'about.content.paragraph1' %>
          </p>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-6">
          <p id="about_content" class="text-justify">
            <%= t 'about.content.paragraph2' %>
            <%= link_to t('about.read_more'), about_path %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row row-lg-heading no-margins favorites">
  <div class="col-md-12">
    <h3 class="no-margins"><%= t 'photo_album.favorite.name' %></h3>
  </div>
</div>

<div class="row row-lg-content no-margins favorites">
  <div class="container">
    <div class="row">
      <% @favorite_photos.each do |favorite_photo| %>
        <% if @favorite_photos.length == 1 %>
          <div class="col-md-12">
        <% else %>
          <div class="col-xs-12 col-sm-6 col-md-<%= "#{12 / @favorite_photos.length}" %>">
        <% end %>
          <a href="<%= gallery_favorite_photo_album_path %>"
             style="background-image: url(<%= favorite_photo.photo_file_url(:thumb) %>)">
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag 'static_pages/home' %>
