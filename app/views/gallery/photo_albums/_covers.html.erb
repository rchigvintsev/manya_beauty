<% @photo_albums.each_slice(3) do |slice| %>
  <div class="row">
    <% slice.each do |photo_album| %>
      <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="thumbnail <%= !photo_album.cover_photo.nil? ? 'photo-album' : 'fallback-photo' %>">
          <a href="<%= gallery_photo_album_path(photo_album) %>">
            <img alt="<%= photo_album.name %>"
                 src="<%= photo_album.cover_photo ? photo_album.cover_photo.photo_file_url(:thumb) : image_url('fallback/default.png') %>"/>
          </a>
          <div class="caption">
            <h3>
              <a href="<%= gallery_photo_album_path(photo_album) %>" class="entity-name">
                <%= photo_album.name %>
              </a>
            </h3>
            <p><%= photo_album.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
