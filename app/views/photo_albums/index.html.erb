<div class="row dashboard-table-header">
  <div class="col-md-8">
    <h2><%= t 'photo_albums' %></h2>
  </div>

  <div class="col-md-4">
    <ul class="pull-right">
      <li>
        <%= link_to t('actions.create'), new_photo_album_path,
            class: 'btn btn-success btn-new' %>
      </li>
      <li>
        <%= link_to t('actions.edit'), '#', class: 'btn btn-primary btn-edit',
            disabled: 'disabled' %>
      </li>
      <li>
        <%= link_to t('actions.delete'), '#', class: 'btn btn-danger btn-delete',
            method: :delete, disabled: 'disabled',
            data: { confirm: t('photo_album.confirm.actions.destroy') } %>
      </li>
    <ul>
  </div>
</div>

<table class="table table-hover dashboard-table photo-albums">
  <thead>
    <tr>
      <th><%= t 'activerecord.attributes.photo_album.name' %></th>
      <th><%= t 'activerecord.attributes.photo_album.category' %></th>
    </tr>
  </thead>
  <tbody>
    <% @photo_albums.each do |photo_album| %>
      <tr>
        <td class="hidden id"><%= photo_album.id %></td>
        <td><%= photo_album.name %></td>
        <td><%= photo_album.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate class: 'pagination pull-right' %>
