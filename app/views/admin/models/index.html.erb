<div class="row admin-table-header">
  <div class="col-md-8">
    <h2><%= t 'models' %></h2>
  </div>

  <%= render 'admin/shared/common_list_actions', args: {
      new_model_path: new_admin_model_path(page: params[:page]),
      model_name: 'model'
  } %>
</div>

<table class="table table-hover admin-table models">
  <thead>
  <tr>
    <th></th>
    <th><%= t 'activerecord.attributes.model.id' %></th>
    <th><%= t 'activerecord.attributes.model.name' %></th>
    <th><%= t 'activerecord.attributes.model.photo_album' %></th>
  </tr>
  </thead>
  <tbody>
  <% @models.each do |model| %>
      <tr>
        <td>
          <% if model.favorite %>
            <span class="glyphicon glyphicon-star glyphicon-favorite" aria-hidden="true"></span>
          <% end %>
        </td>
        <td class="id"><%= model.id %></td>
        <td><%= model.name %></td>
        <td><%= model.photo_album.name %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate class: 'pagination pull-right' %>
