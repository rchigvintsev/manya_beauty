<h2><%= @photo.title %></h2>

<div class="form-group">
  <strong><%= t 'activerecord.attributes.photo.title' %>:</strong>
  <%= @photo.title %>
</div>

<div class="form-group">
  <strong><%= t 'activerecord.attributes.photo.description' %>:</strong>
  <%= @photo.description %>
</div>

<div class="form-group">
  <strong><%= t 'activerecord.attributes.photo.photo_file' %>:</strong>
  <%= @photo.photo_file %>
</div>

<div class="form-group">
  <strong><%= t 'activerecord.attributes.photo.photo_album' %>:</strong>
  <%= @photo.photo_album.name %>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-xs-6 col-md-3">
      <a data-toggle="lightbox" href="#photo-lightbox" class="thumbnail">
        <%= image_tag @photo.photo_file_url(:thumb) %>
      </a>
    </div>
  </div>
</div>

<%= link_to t('actions.edit'), edit_photo_path(@photo, page: params[:page]),
    class: 'btn btn-primary' %>
<%= link_to t('actions.cancel'), photos_path(page: params[:page]),
    class: 'btn btn-default' %>

<%= render 'shared/photo_lightbox', photo: @photo %>
