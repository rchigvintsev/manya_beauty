<div class="row dashboard-table-header">
  <div class="col-md-8">
    <h2><%= t 'photos' %></h2>
  </div>

  <div class="col-md-4">
    <ul class="pull-right">
      <li>
        <%= link_to t('actions.create'), new_photo_path,
            class: 'btn btn-success btn-new' %>
      </li>
      <li>
        <%= link_to t('actions.edit'), '#', class: 'btn btn-primary btn-edit',
            disabled: 'disabled' %>
      </li>
      <li>
        <%= link_to t('actions.delete'), '#', class: 'btn btn-danger btn-delete',
            method: :delete, disabled: 'disabled',
            data: { confirm: t('photo.confirm.actions.destroy') } %>
      </li>
    <ul>
  </div>
</div>

<table class="table table-hover dashboard-table photos">
  <thead>
    <tr>
      <th><%= t 'activerecord.attributes.photo.title' %></th>
      <th><%= t 'activerecord.attributes.photo.photo_file' %></th>
      <th><%= t 'activerecord.attributes.photo.photo_album' %></th>
    </tr>
  </thead>
  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td class="hidden id"><%= photo.id %></td>
        <td><%= photo.title %></td>
        <td><%= photo.photo_file %></td>
        <td><%= photo.photo_album.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate class: 'pagination pull-right' %>
