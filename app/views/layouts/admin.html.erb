<!DOCTYPE html>
<html>
<head>
  <%= render 'layouts/meta' %>

  <title><%= t 'brand' %></title>

  <%= render 'layouts/turbolinks' %>
  <%= render 'layouts/html5shim' %>
</head>
<body class="admin-body">
<%= render 'layouts/navbar' %>

<div class="container-fluid">
  <div class="row">
    <div id="admin_sidebar" class="col-sm-3 col-md-2 admin-sidebar">
      <ul class="nav admin-nav-sidebar">
        <li<%= params[:controller] == 'photo_albums' ? ' class=active' : '' %>>
          <%= link_to t('photo_albums'), admin_photo_albums_path %>
        </li>
        <li<%= params[:controller] == 'models' ? ' class=active' : '' %>>
          <%= link_to t('models'), admin_models_path %>
        </li>
        <li<%= params[:controller] == 'photos' ? ' class=active' : '' %>>
          <%= link_to t('photos'), admin_photos_path %>
        </li>
        <li<%= params[:controller] == 'comments' ? ' class=active' : '' %>>
          <a href="<%= admin_comments_path %>">
              <span class="badge draft-comment-counter">
                <%= draft_comment_count %>
              </span>
            <%= t 'comments' %>
          </a>
        </li>
      </ul>
    </div>

    <div id="admin_main"
         class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 admin-main">
      <% if flash[:notice] %>
          <div class="alert admin-alert alert-info">
            <%= notice %>
          </div>
      <% end %>

      <% if flash[:warn] %>
          <div class="alert admin-alert alert-warning">
            <%= flash[:warn] %>
          </div>
      <% end %>

      <% if flash[:alert] %>
          <div class="alert admin-alert alert-danger">
            <%= alert %>
          </div>
      <% end %>

      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>
